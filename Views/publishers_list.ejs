<!DOCTYPE html>
<html lang="en">

<head>
    <title>Fetch using MySQL and Node.js</title>
</head>
<style>
    .btn {
        display: block;
        text-align: center;
        font-size: 24px;

        text-decoration: none;
        color: black;

        padding: 10px;
        margin: 20px;
    }
</style>

<body>
    <div class="table-data">

        <h2>Display publishers using Node.js & MySQL</h2>
        <table border="1">
            <tr>
                <th>S.N</th>
                <th>Publisher company Name</th>
                <th>Publisher City</th>
                <th>Publisher Locality</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>

            <% if(userData.length!=0){ var i=1; userData.forEach(function(data){ %>
                <tr>
                    <td>
                        <%=data.pub_publisherID%>
                    </td>
                    <td>
                        <%=data.pub_name %>
                    </td>
                    <td>
                        <%=data.pub_city %>
                    </td>
                    <td>
                        <%=data.pub_locality %>
                    </td>
                    <td><a href="/publishers/form/update">Edit</a></td>
                    <td><a href="/publishers/form/delete">Delete</a></td>
                </tr>
                <% i++; }) %>
                    <% } else{ %>
                        <tr>
                            <td colspan="7">No Data Found</td>
                        </tr>
                        <% } %>
        </table>


        <a class="btn" href="./form">+ CREATE NEW</a>
        <a class="btn" href="./exports">Export Now</a>
    </div>
</body>

</html>