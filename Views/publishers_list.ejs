<!DOCTYPE html>
<html lang="en">

<head>
    <title>Fetch using MySQL and Node.js</title>
</head>
<style>
    h2 {
        color: green;
    }
</style>
<style>
    .btn {
        display: block;
        text-align: center;
        font-size: 24px;

        text-decoration: none;
        color: black;

        padding: 10px;
        margin: 20px;
        text-decoration: underline;
    }

    .btn:hover {
        color: blue;
    }

    .table-data {
        text-align: center;
    }

    h2 {
        color: green;
    }

    th {
        color: red;
    }

    td {
        color: black;
    }

    body {
        display: flex;
        flex-direction: row;
        width: 100vw;
        height: 100vh;
        align-items: center;
        justify-content: center;
        font-family: Arial, Helvetica, sans-serif;
        background: rgb(2, 0, 36);
        background: linear-gradient(90deg, rgba(2, 0, 36, 1) 0%, rgba(9, 80, 121, 1) 35%, rgba(0, 212, 255, 1) 100%);
    }
</style>

<body>
    <div class="table-data">

        <h2>Display publishers using Node.js & MySQL</h2>
        <table border="1" align="center" style="background-color:white">
            <tr>
                <th>S.N</th>
                <th>Publisher company Name</th>
                <th>Publisher City</th>
                <th>Publisher Locality</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>

            <% if(userData.length!=0){ var i=1; userData.forEach(function(data){ %>
                <tr>
                    <td>
                        <%=data.pub_publisherID%>
                    </td>
                    <td>
                        <%=data.pub_name %>
                    </td>
                    <td>
                        <%=data.pub_city %>
                    </td>
                    <td>
                        <%=data.pub_locality %>
                    </td>
                    <td><a href="/publishers/form/update">Edit</a></td>
                    <td><a href="/publishers/form/delete">Delete</a></td>
                </tr>
                <% i++; }) %>
                    <% } else{ %>
                        <tr>
                            <td colspan="7">No Data Found</td>
                        </tr>
                        <% } %>
        </table>


        <a class="btn" href="./form">+ CREATE NEW</a>
        <a class="btn" href="./exports">Export Now</a>
        <a class="btn" href="./imports">Import Now</a>
        <a class="btn" href="../">Home page</a>

    </div>
</body>

</html>